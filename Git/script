# -Add/Commit All-
git add .
git commit -m "Message"

git commit -a -m "Message"

git add -A
git commit -m "Message"



# -Aliases-
git config --global alias.ac '!git add -A && git commit -m'
git config --global alias.ac "commit -a -m"



# Revert
git revert 486bdb2
git revert HEAD


# Reflog
# // see the recent commits, pulls, resets, pushes, etc on your local machine
git reflog

# Pretty Logs
# gives you the ability to print out a pretty log of your commits/branches.
git log --graph --decorate --oneline

# Searching Logs
#  search for specific changes in the code
git log -S "A promise in JavaScript is very similar"

# Stash
# will stash all your code changes, but does not actually commit them.
git stash
git stash pop

# Remove Dead Branches
# Will delete all the tracking information for branches that are on your local machine that are not in the remote repository, but it does not delete your local branches
git remote update --prune
git branch -vv | awk "/: gone]/{print $1}" | xargs git branch -d
git config --global alias.prune 'git remote update --prune && git branch -vv | awk "/: gone]/{print $1}" | xargs git branch -d


# Bisect
# finding which commits caused certain bugs
git bisect start 
git bisect bad 
git bisect good 48c86d6


# Destroy Local Changes
# Wipe out all changes on your local branch to exactly what is in the remote branch
git reset --hard origin/main



